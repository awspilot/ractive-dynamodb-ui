.ractive-dynamodb-ui {position: absolute;top:0px;left: 0px;right: 0px;bottom: 0px;font-family: sans-serif;}
.ractive-dynamodb-ui * {box-sizing: border-box }
.ractive-dynamodb-ui {
	.pull-right {float: right!important;}
	a {text-decoration: none;}

	.btn.disabled,
	.btn[disabled],
	fieldset[disabled] .btn {cursor: not-allowed;filter: alpha(opacity=65);box-shadow: none;opacity: .65;pointer-events: none;}
	.btn-group .dropdown-toggle:active,
	.btn-group.open .dropdown-toggle {outline: 0;}
	.btn {
		display: inline-block;
		padding: 0 2px;
		font-size: 14px;
		line-height: 14px;

		margin-bottom: 0;

		font-weight: 400;
		text-align: center;
		white-space: nowrap;
		vertical-align: middle;
		touch-action: manipulation;
		cursor: pointer;
		user-select: none;
		background-image: none;
		border: 1px solid transparent;
		border-radius: 4px;
		text-shadow: none;
	}
}

.ractive-dynamodb-ui {
	.hsplit {position: absolute;top:0px;left: 0px;right: 0px;bottom: 0px;}
	left {position:absolute;display: block;top: 5px;left: 0px;width: 260px;bottom: 0px;}
	content {position:absolute;display: block;top: 0px;left: 265px;right: 0px;bottom: 0px;margin-top: 5px;}
	miniheader {display: block;font-size: 12px;padding-left: 10px;}
	.miniheaderbody {left: 0px;top: 29px;right: 0px;bottom: 0px;} /* scrollarea */
	left tables > div {display: block;height: 20px; line-height: 20px;font-size: 13px;padding: 0px 10px;border-top: 1px solid transparent;border-left: 1px solid transparent;;margin-bottom: 0px;cursor: pointer}

	content tabcontent .tableview-table-tabs {position: absolute;top: 10px;left: 30px;height: 30px;right: 30px;border-bottom: 1px solid #bbb;padding: 0px 20px;font-size: 0px;}
	.btn-tableview-tab {display: inline-block;height: 30px;line-height: 30px;text-align: center;vertical-align: middle;border-radius: 3px 3px 0px 0px;text-decoration: none;}
	.btn-tableview-tab:hover {cursor: pointer;}
	.btn-tableview-tab i {line-height: 40px;line-height: 30px;margin: 5px;width: 30px;height: 30px;border-radius: 5px;}

}
